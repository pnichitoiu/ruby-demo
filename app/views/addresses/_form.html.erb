<%= form_with model: [@user.addresses.build] , class: "form-authenticate" do |form| %>
  <div class="form-group">
    <%= form.text_field :street, class: "form-control", placeholder: 'Street & Number' %>
  </div>

  <div class="form-group">
    <%= form.text_field :zip, class: "form-control", placeholder: 'Zip' %>
  </div>

  <div class="form-group">
    <%= form.text_field :city, class: "form-control", placeholder: 'City' %>
  </div>

  <div class="form-group">
    <%= form.text_field :country, class: "form-control", placeholder: 'Country' %>
  </div>

  <div class="form-group">
    <%= form.text_field :first_name, class: "form-control", placeholder: 'First Name' %>
  </div>

  <div class="form-group">
    <%= form.text_field :last_name, class: "form-control", placeholder: 'Last Name' %>
  </div>

  <div class="form-group text-center">
    <button class="btn btn-dark btn-authenticate-navbar"><%= form.submit "Add Address"%></button>
  </div>
<% end %>