<div class="container-fluid authenticate-container">
  <h1 align="center">Log In</h1>

  <% flash.each do |type, msg| %>
    <div class="alert alert-info" id="flash_<%= type %>">
      <%= msg %>
    </div>
  <% end %>

  <%= form_with(scope: :session, url: login_path, class: "form-authenticate") do |form| %>
    <div class="form-group">
      <%= form.text_field :email, class: "form-control", placeholder: 'Email' %>
    </div>

    <div class="form-group">
      <%= form.password_field :password, class: "form-control", placeholder: 'Password'%>
    </div>

    <p class="text-center form-authenticate-redirect">Don't have an account? <%= link_to "Sign Up", signup_path %></p>

    <div class="form-group text-center">
      <button class="btn btn-dark btn-authenticate-navbar"><%= form.submit "Log In" %></button>
    </div>
  <% end %>
</div>