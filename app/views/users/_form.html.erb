<%= form_with model: @user, class: "form-authenticate"  do |form| %>
  <div class="form-group">
    <%= form.text_field :email, class: "form-control", placeholder: 'Email Address' %>
  </div>

  <div class="form-group">
    <%= form.text_field :first_name, class: "form-control", placeholder: 'First Name' %>
  </div>

  <div class="form-group">
    <%= form.text_field :last_name, class: "form-control", placeholder: 'Last Name' %>
  </div>

  <div class="form-group">
    <%= form.text_field :phone_number, class: "form-control", placeholder: 'Phone Number' %>
  </div>

  <div class="form-group">
    <%= form.password_field :password, class: "form-control", placeholder: 'Password' %>
  </div>
  <div class="form-group">
    <%= form.password_field :password_confirmation, class: "form-control", placeholder: 'Confirm password' %>
  </div>

  <% if current_page?(:controller => 'users', :action => 'new') %>
    <p class="text-center form-authenticate-redirect">Do you already have an account? <%= link_to "Log In", login_path  %></p>
  <% end %>

  <div class="form-group text-center">
    <button class="btn btn-dark btn-authenticate-navbar">
      <% if current_page?(:controller => 'users', :action => 'new') %>
        <%= form.submit "Sign Up"%>
      <% else %>
        <%= form.submit "Update Data"%>
      <% end %>
    </button>
  </div>
<% end %>