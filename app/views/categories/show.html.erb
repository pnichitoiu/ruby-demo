<h1><%= @category.name %></h1>

<p><%= @category.description %></p>

<p><%= @tree_data %></p>

<% if @category.image.attached? %>
<%= image_tag @category.image.variant(resize_to_limit: [300, 300], format: :jpeg, saver: { subsample_mode: "on", strip: true, interlace: true, quality: 80 }) %>
<% end %>
<ul>
  <% @category.products.each do |product| %>
    <li>
      <%= product.name %>
      <%= image_tag product.image.variant(resize_to_limit: [100, 100], format: :jpeg, saver: { subsample_mode: "on", strip: true, interlace: true, quality: 80 }) %>
    </li>
  <% end %>
</ul>